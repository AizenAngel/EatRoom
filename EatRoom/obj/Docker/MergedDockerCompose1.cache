services:
  basket.api:
    build:
      context: C:\Users\Luka\Desktop\EatRoom\EatRoom
      dockerfile: Basket/Basket.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Basket.API
      target: base
    container_name: basket.api
    depends_on:
      basketdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      CacheSettings:ConnectionString: basketdb:6379
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: basketapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net5.0/Basket.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8005
      target: 80
    tty: true
    volumes:
    - C:\Users\Luka\Desktop\EatRoom\EatRoom\Basket\Basket.API:/app:rw
    - C:\Users\Luka\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Luka\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Luka\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\Luka\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\Luka\Desktop\EatRoom\EatRoom:/src:rw
